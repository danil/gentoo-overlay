! UXTerm.
UXTerm.vt100.metaSendsEscape: true
UXTerm.vt100.font1: -misc-fixed-medium-r-normal--8-80-75-75-c-50-iso10646-1
UXTerm.vt100.font2: -misc-fixed-medium-r-normal--8-80-75-75-c-50-iso10646-1
UXTerm.vt100.font3: -misc-fixed-medium-r-normal--14-130-75-75-c-70-iso10646-1
UXTerm.vt100.font4: -misc-fixed-medium-r-normal--13-120-75-75-c-80-iso10646-1
UXTerm.vt100.font5: -misc-fixed-medium-r-normal--18-120-100-100-c-90-iso10646-1
UXTerm.vt100.font: -misc-fixed-medium-r-normal--18-120-100-100-c-90-iso10646-1
UXTerm.vt100.font6: -misc-fixed-medium-r-normal--20-200-75-75-c-100-iso10646-1
UXTerm.vt100.geometry: 50x16

! "White" text on black background.
n! UXTerm.vt100.foreground: gray90
! UXTerm.vt100.background: black

! Black text on a white background.
! UXTerm.vt100.foreground: black
! UXTerm.vt100.background: white

! urxvt.
URxvt*font: -misc-fixed-medium-r-normal--18-120-100-100-c-90-iso10646-1,\
            -misc-fixed-medium-r-normal--8-80-75-75-c-50-iso10646-1,\
            -misc-fixed-medium-r-normal--8-80-75-75-c-50-iso10646-1,\
            -misc-fixed-medium-r-normal--14-130-75-75-c-70-iso10646-1,\
            -misc-fixed-medium-r-normal--13-120-75-75-c-80-iso10646-1
URxvt*geometry: 50x16
URxvt*scrollBar: true
urxvt.scrollstyle: plain
urxvt.scrollBar_right: true
urxvt.scrollColor: gray80

! "White" text on black background.
! URxvt*foreground: gray90
! URxvt*background: black

! Black text on a white background.
! URxvt*foreground: black
! URxvt*background: white

URxvt*saveLines: 4000

! urxvtperl
! See the urxvtperl manpage for details.
! You can find them in </usr/lib/urxvt/perl/>.
! <http://wiki.archlinux.org/index.php/Rxvt-unicode#No_clipboard_management_solution>.
! selection,option-popup,selection-popup,readline,clipboard,matcher
URxvt*perl-ext-common: default,matcher,clipboard,-searchable-scrollback

! matcher.
URxvt*matcher.button: 3
!URxvt*colorUL: #86a2be
!URxvt*urlLauncher: x-www-browser
!URxvt*urlLauncher: /home/danil/bin/epiphany.sh
URxvt*urlLauncher: chromium

! :Bind C-0, C-+ and C-= to activate small, medium, and big font size resp.



! URxvt.keysym.C-0: command:\033]710;-*-dina-medium-r-normal--13-*-*-*-*-*-*-*\007
! URxvt.keysym.C-minus: command:\033]710;-*-dina-medium-r-normal--15-*-*-*-*-*-*-*\007
! URxvt.keysym.C-equal: command:\033]710;-*-dina-medium-r-normal--16-*-*-*-*-*-*-*\007
